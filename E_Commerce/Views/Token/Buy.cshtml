
@{
    /**/

    ViewBag.Title = "Buy";
    Layout = "~/Views/Shared/_Layout.cshtml";


}

<h2>Purchase more tokens</h2>

<!-- product category -->
<section id="aa-product-details">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="aa-product-details-area">
                    <div class="aa-product-details-content">
                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="aa-product-view-content">
                                    <div class="aa-price-block">
                                        <p class="aa-product-avilability">Title of package: <strong><span>SILVER</span></strong></p>
                                        <p class="aa-product-avilability">Price: <span>@E_Commerce.Models.AdminParams.S</span></p>
                                        <button type="button" class="btn btn-success">
                                            @Html.ActionLink("Purchase", "ConfirmBuy", "Token", new { package = "1"}, null)
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="aa-product-view-content">
                                    <div class="aa-price-block">
                                        <p class="aa-product-avilability">Title of package: <strong><span>GOLD</span></strong></p>
                                        <p class="aa-product-avilability">Price: <span>@E_Commerce.Models.AdminParams.G</span></p>
                                        <button type="button" class="btn btn-success">
                                            @Html.ActionLink("Purchase", "ConfirmBuy", "Token", new { package = "2" }, null)
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-12 col-sm-12 col-xs-12">
                                <div class="aa-product-view-content">
                                    <div class="aa-price-block">
                                        <p class="aa-product-avilability">Title of package: <strong><span>PLATINUM</span></strong></p>
                                        <p class="aa-product-avilability">Price: <span>@E_Commerce.Models.AdminParams.P</span></p>
                                        <button type="button" class="btn btn-success">
                                            @Html.ActionLink("Purchase", "ConfirmBuy", "Token", new { package = "3" }, null)
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>