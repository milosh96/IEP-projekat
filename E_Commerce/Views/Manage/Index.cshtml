@model E_Commerce.Models.User
@{
    ViewBag.Title = "Manage";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Password:</dt>
        <dd>
            @Html.ActionLink("Change your password", "ChangePassword")
        </dd>
        <dt>First Name: </dt>
        <dd>
            @Model.FirstName @Html.ActionLink("Change", "ChangeFirst")
        </dd>
        <dt>Last Name: </dt>
        <dd>
            @Model.LastName  @Html.ActionLink("Change", "ChangeLast") 
        </dd>
        <dt>Num of tokens: </dt>
        <dd>
            @Model.NumberOfTokens
        </dd>
        <dt>Email address:</dt>
        <dd>
            @Model.Email
        </dd>

    </dl>
</div>
