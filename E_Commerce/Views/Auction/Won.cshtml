@model PagedList.IPagedList<E_Commerce.Models.auction>
@using PagedList.Mvc;
@{
    ViewBag.Title = "Won";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Won auctions</h2>

<!-- Products section -->
<section id="aa-product">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="row">
                    <div class="aa-product-area">
                        <div class="aa-product-inner">
                            <!-- Tab panes -->
                            <div class="tab-content">
                                <div class="page-numbering">
                                    @Html.PagedListPager(Model, page => Url.Action("Won",
                                                    new { page }))
                                </div>
                                <!-- Start all products -->
                                <div class="tab-pane fade in active" id="men">
                                    <ul class="aa-product-catg">
                                        @foreach (var item in Model)
                                        {
                                            <!-- start single product item -->
                                            <li class="col-md-4 col-xs-12" style="border:10px">
                                                <figure>
                                                    <a class="aa-product-img" href="@Url.Action("Show", "Auction", new { id = item.id })">
                                                        @{
                                                            var baseIm = Convert.ToBase64String(item.picture);
                                                            var imageSrc = String.Format("data:image/jpg;base64,{0}", baseIm);
                                                        }
                                                        <img src="@imageSrc" style="width:200px; height:120px" alt="slika_proizvoda" class="product-image" />
                                                    </a>

                                                </figure>
                                                <figcaption>
                                                    <h4 class="aa-product-title">@Html.DisplayFor(modelItem => item.title)</h4>
                                                    <span class="aa-product-price">@Html.DisplayFor(modelItem => item.currentPrice)</span><br />
                                                    <span> @Html.DisplayFor(modelItem => item.status)</span>

                                                </figcaption>

                                                <!-- product badge -->
                                            </li>
                                        }
                                    </ul>
                                </div>
                                <!-- / all products -->
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

